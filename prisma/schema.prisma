generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  
  directUrl = env("postgresql://blog_owner:ZtmOEIzsa23p@ep-lingering-queen-a54h1djp.us-east-2.aws.neon.tech/blog?sslmode=require")
}

model User {
  id          Int         @id @default(autoincrement())
  username    String      @unique
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Movie {
  id            Int         @id @default(autoincrement())
  title         String      @unique
  description   String
  runtimeMins   Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
