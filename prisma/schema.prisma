generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @unique @default(autoincrement())
  username String @unique
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role Role? @default(USER)
}

model Movie {
  id Int @id @unique @default(autoincrement())
  title String
  description String
  runtimeMins Int
}

enum Role {
  USER
  ADMIN
}